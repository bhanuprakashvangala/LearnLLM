// Prisma Schema for LearnLLM Authentication & User Data
// This is the database schema for storing user information

// 1. Choose your database provider (uncomment one):
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// NextAuth.js Models
// These models are required for NextAuth.js to work

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String    @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?   // For email/password auth
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  accounts       Account[]
  sessions       Session[]
  progress       UserProgress[]
  challenges     ChallengeCompletion[]
  playgrounds    PlaygroundSave[]

  // Plan and subscription
  plan           Plan      @default(FREE)
  role           Role      @default(USER)
  stripeCustomerId String? @unique
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// LearnLLM Specific Models

enum Plan {
  FREE
  PRO
  TEAMS
}

enum Role {
  USER
  EMPLOYEE
  ADMIN
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

// Track user's learning progress
model UserProgress {
  id         String     @id @default(cuid())
  userId     String
  lessonSlug String
  difficulty Difficulty
  completed  Boolean    @default(false)
  progress   Int        @default(0) // Percentage 0-100
  timeSpent  Int        @default(0) // Minutes
  lastViewed DateTime   @default(now())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonSlug])
}

// Track challenge completions
model ChallengeCompletion {
  id          String   @id @default(cuid())
  userId      String
  challengeId String
  completed   Boolean  @default(false)
  code        String?  @db.Text
  points      Int      @default(0)
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, challengeId])
}

// Save playground experiments
model PlaygroundSave {
  id           String   @id @default(cuid())
  userId       String
  title        String
  systemPrompt String   @db.Text
  userPrompt   String   @db.Text
  response     String?  @db.Text
  model        String
  temperature  Float
  maxTokens    Int
  isPublic     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// DATABASE SETUP INSTRUCTIONS:
//
// 1. Install Prisma CLI: npm install prisma --save-dev
// 2. Initialize Prisma: npx prisma init
// 3. Set DATABASE_URL in .env file
// 4. Run migrations: npx prisma migrate dev --name init
// 5. Generate client: npx prisma generate
//
// For production deployment:
// - Use PostgreSQL (Vercel Postgres, Supabase, Railway, etc.)
// - Run: npx prisma migrate deploy
